{
  "name": "kusama-balances",
  "private": true,
  "scripts": {
    "codegen": "sqd codegen",
    "build": "rm -rf lib && tsc",
    "init": "node db/init.js",
    "db:create-migration": "npm run build && sqd db create-migration",
    "db:migrate": "npx sqd db migrate",
    "schema:reset": "",
    "processor:migrate": "echo skip",
    "processor:dev-start": "npm run build && node -r dotenv/config lib/processor.js",
    "processor:start": "node lib/processor.js",
    "query-node:start": "squid-graphql-server",
    "release": "sqd squid release chaindata@`git rev-parse --short HEAD`",
    "release:latest": "sqd squid kill chaindata@latest && sqd squid release chaindata@latest"
  },
  "dependencies": {
    "@polkadot/api": "^7.3.1",
    "@subsquid/cli": "^0.1.2",
    "@subsquid/graphql-server": "^0.1.4",
    "@subsquid/ss58": "^0.0.4",
    "@subsquid/substrate-processor": "^0.3.0",
    "dotenv": "^10.0.0",
    "pg": "^8.7.1",
    "typeorm": "^0.2.41"
  },
  "devDependencies": {
    "@subsquid/substrate-metadata-explorer": "^0.0.7",
    "@subsquid/substrate-typegen": "^0.2.1",
    "@types/node": "^16.11.17",
    "typescript": "~4.5.4"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "overrides": [
      {
        "files": "processor.ts",
        "options": {
          "tabWidth": 4
        }
      }
    ]
  }
}
